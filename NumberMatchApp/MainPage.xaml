<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NumberMatchApp.MainPage"
             xmlns:mdc="clr-namespace:Material.Components.Maui;assembly=Material.Components.Maui"
             NavigationPage.HasNavigationBar="False"
             Shell.NavBarIsVisible="false">

    <ScrollView>
        <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Center">

            <Label x:Name="Title"
               Text="Number Match"
               FontSize="32"
               FontAttributes="Bold"
               TextColor="{DynamicResource Primary}"
               HorizontalOptions="Center" />

            <Label x:Name="LabelAmmountMatchedNumbers"
               Text="Matched numbers: 0"
               TextColor="{DynamicResource Primary}"
               HorizontalOptions="Center" />

            <Label x:Name="LabelStage"
               Text="Stage: 0"
               TextColor="{DynamicResource Primary}"
               HorizontalOptions="Start" />

            <Grid x:Name="NumberMatchGrid" HorizontalOptions="Center" VerticalOptions="Center"></Grid>

            <Grid HorizontalOptions="Center" VerticalOptions="Center" ColumnSpacing="50" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="AddBtn"
                    Text="+"
                    Grid.Row="0"
                    Grid.Column="0"
                    Clicked="AddButtonClicked"
                    BackgroundColor="{DynamicResource Primary}"
                    TextColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}"
                    CornerRadius="20" />

                <Button x:Name="HelpBtn"
                    Text="Help"
                    Grid.Row="0"
                    Grid.Column="1"
                    Clicked="HelpButtonClicked"
                    BackgroundColor="{DynamicResource Primary}"
                    TextColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}"
                    CornerRadius="20" />
            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>