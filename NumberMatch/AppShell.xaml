<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="NumberMatch.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:NumberMatch"
    xmlns:pages="clr-namespace:NumberMatch.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="NumberMatch"
    Shell.BackgroundColor="{DynamicResource Background}"
    Shell.ForegroundColor="{DynamicResource Primary}"
    Shell.TitleColor="{DynamicResource Primary}"
    Shell.DisabledColor="{DynamicResource Secondary}"
    Shell.UnselectedColor="{DynamicResource Secondary}"
    Shell.NavBarIsVisible="True">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Settings"
        ContentTemplate="{DataTemplate pages:SettingsPage}"
        Route="SettingsPage"/>

</Shell>