<?xml version="1.0" encoding="utf-8" ?>
<mct:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
           xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
           xmlns:mct="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
           xmlns:material="clr-namespace:HorusStudio.Maui.MaterialDesignControls;assembly=HorusStudio.Maui.MaterialDesignControls"
           x:Class="NumberMatch.Pages.Popups.ErrorPopup"
           CanBeDismissedByTappingOutsideOfPopup="False"
           Margin="0"
           Padding="0">
    <Grid>
        <Frame HasShadow="True" BackgroundColor="{DynamicResource Background}" CornerRadius="20" VerticalOptions="Center">
            <VerticalStackLayout VerticalOptions="Center">
                <material:MaterialLabel Text="Error" Type="TitleLarge" HorizontalOptions="Center" />

                <Label x:Name="ErrorLabel" VerticalOptions="Center" HorizontalOptions="Center" Margin="10" />

                <material:MaterialButton
                    HorizontalOptions="End"
                    Margin="10"
                    Text="OK"
                    TouchAnimationType="Bounce"
                    Clicked="Button_Clicked" />
            </VerticalStackLayout>
        </Frame>
    </Grid>
</mct:Popup>