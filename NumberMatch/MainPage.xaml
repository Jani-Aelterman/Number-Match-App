<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NumberMatch.MainPage"
             xmlns:mct="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
             xmlns:material="clr-namespace:HorusStudio.Maui.MaterialDesignControls;assembly=HorusStudio.Maui.MaterialDesignControls">
    <!--SafeAreaEdges="All">-->

    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior />
    </ContentPage.Behaviors>

    <!-- Layout: header (Auto), scrollable content (*), footer (Auto) -->
    <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="*">

        <!-- Header: always on top -->
        <VerticalStackLayout Grid.Row="0" Spacing="12" Padding="10,0,10,10" HorizontalOptions="Fill">
            <material:MaterialButton x:Name="Title"
                                     Text="Number Match"
                                     FontSize="32"
                                     FontAttributes="Bold"
                                     TextColor="{DynamicResource Primary}"
                                     BackgroundColor="Transparent"
                                     BorderColor="{DynamicResource Primary}"
                                     BorderWidth="1"
                                     CornerRadius="10"
                                     Padding="0"
                                     VerticalOptions="Center"
                                     Clicked="SettingsButtonClicked"
                                     HorizontalOptions="Center" />

            <material:MaterialCard HorizontalOptions="Center" BackgroundColor="{DynamicResource SecondaryContainer}" Padding="10">
                <Label x:Name="LabelAmmountMatchedNumbers"
                           Text="Matched numbers: 0"
                           TextColor="{DynamicResource OnSecondaryContainer}"/>
                </material:MaterialCard>

                <material:MaterialCard HorizontalOptions="Start" BackgroundColor="{DynamicResource SecondaryContainer}" Padding="10">
                    <Label x:Name="LabelStage"
                           Text="Stage: 0"
                           TextColor="{DynamicResource OnSecondaryContainer}"/>
                </material:MaterialCard>
        </VerticalStackLayout>

        <!-- Scrollable grid: occupies the middle and will scroll independently -->
        <ScrollView Grid.Row="1" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" VerticalScrollBarVisibility="Never">
            <VerticalStackLayout Padding="10,10,10,10" Spacing="12">
                <material:MaterialCard BackgroundColor="{DynamicResource Primary}" Padding="2" Margin="0" CornerRadius="8">
                    <Grid x:Name="NumberMatchGrid" VerticalOptions="Start" HorizontalOptions="FillAndExpand" />
                </material:MaterialCard>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Footer: always on bottom -->
        <Grid Grid.Row="2" Padding="10,10,10,40" BackgroundColor="Transparent">
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="15" VerticalOptions="Center">
                <!--<Grid
                    Grid.Column="0"
                    HorizontalOptions="End"
                    VerticalOptions="Center">-->

                    <material:MaterialIconButton x:Name="AddBtn"
                                                 Type="Filled"
                                                 BackgroundColor="{DynamicResource Primary}"
                                                 IconTintColor="{DynamicResource OnPrimary}"
                                                 ImageSource="add.png"
                                                 TouchAnimationType="Bounce"
                                                 Clicked="AddButtonClicked" />

                    <!--<material:MaterialBadge
                        x:Name="AddBtnBadge"
                        Type="Large"
                        Text="3"
                        BackgroundColor="{DynamicResource Tertiary}"
                        TextColor="{DynamicResource OnTertiary}"
                        VerticalOptions="Start"
                        HorizontalOptions="End"/>
                </Grid>-->
                
                <Grid
                    x:Name="HelpBtnContainer"
                    Grid.Column="0"
                    HorizontalOptions="End"
                    VerticalOptions="Center">

                    <material:MaterialIconButton x:Name="HelpBtn"
                                                 Type="Filled"
                                                 BackgroundColor="{DynamicResource Primary}"
                                                 IconTintColor="{DynamicResource OnPrimary}"
                                                 ImageSource="lightbulb_2.png"
                                                 TouchAnimationType="Bounce"
                                                 Clicked="HelpButtonClicked" />

                    <material:MaterialBadge
                        x:Name="HelpBtnBadge"
                        Type="Large"
                        Text="3"
                        BackgroundColor="{DynamicResource Tertiary}"
                        TextColor="{DynamicResource OnTertiary}"
                        VerticalOptions="Start"
                        HorizontalOptions="End"/>
                </Grid>

                <material:MaterialIconButton x:Name="ResetBtn"
                                             ImageSource="restart_alt.png"
                                             Type="Filled"
                                             BackgroundColor="{DynamicResource Primary}"
                                             IconTintColor="{DynamicResource OnPrimary}"
                                             TouchAnimationType="Bounce"
                                             Clicked="ResetButtonClicked" />
            </HorizontalStackLayout>
        </Grid>

    </Grid>
</ContentPage>
